<h1><%= @board.board_name %></h1>

<%= link_to "Edit", edit_board_path(@board), class: "ui orange button" %>
<%= link_to "Delete", @board, method: :delete, class: "ui red button" %>
<hr/>
<h3>Click List to View Tasks</h3>
<div class="ui cards">
    <% @board.lists.each do |list| %>
        <div class="card">
            <div class="header"><h3><%= list.list_priority %> | 
                 <%= link_to list.list_name, board_list_path(@board, list) %>
            </h3>
            <div class="two ui buttons">
                <%= link_to "Edit ", edit_board_list_path(@board, list), class: "ui orange button small" %>
                <%= link_to "Delete", board_list_path(@board, list), method: :delete, class: "ui red button" %>
            </div>
            </div>            
        </div>
    <% end %>
</div>

<%= link_to "Add List to Board", new_board_list_path(@board) %>
</div>