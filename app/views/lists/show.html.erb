<h1><%= @list.list_name %></h1>
<br />
<hr/>
<h2>Tasks</h2>
<% @list.tasks.each do |task| %>
    <% if task.completed? == false %>
    <%= task.task_priority %> | 
    <%= task.task_name %>
    <br />
    <%= task.task_description %>
    <br />
    <%= link_to "Edit ", edit_list_task_path(@list, task), class: "ui orange button small" %> <%= link_to "Delete", list_task_path(@list, task), method: :delete, class: "ui red button" %> | <%= link_to "Mark as Complete", completed_path(@list, task), method: :patch, class: "ui button" %>
<br />

<%end%>
<% end %>

<%= link_to "Add Task to List", new_list_task_path(@list) %>

<h2>Completed Tasks</h2>
<% @list.tasks.each do |task| %>
    <% if task.completed? %>
    <h5><%= task.task_name %></h5>
<% end %>
<% end %>
